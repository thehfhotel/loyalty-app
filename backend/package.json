{
  "name": "loyalty-backend",
  "version": "4.0.1",
  "description": "Hotel Loyalty System Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "if [ -f dist/index.js ]; then node dist/index.js; else npx tsx src/index.ts; fi",
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage && echo '\nðŸŽ¯ Coverage report generated at backend/coverage/index.html'",
    "test:db": "jest --testPathPattern=database",
    "lint": "eslint src",
    "lint:security": "eslint src",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npm run lint:security && npm run security:audit",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/utils/seedDatabase.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@trpc/server": "^11.0.0",
    "@types/connect-redis": "^0.0.23",
    "@types/sharp": "^0.31.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-line-auth": "^0.2.9",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.34.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.9",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "prisma": "^6.13.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.46.4"
  }
}
