{
  "name": "loyalty-backend",
  "version": "4.0.1",
  "description": "Hotel Loyalty System Backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx tsx src/index.ts",
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "node scripts/run-jest-with-pattern.cjs unit",
    "test:integration": "node scripts/run-jest-with-pattern.cjs integration",
    "test:e2e": "node scripts/run-jest-with-pattern.cjs e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage && echo '\nðŸŽ¯ Coverage report generated at backend/coverage/index.html'",
    "test:db": "node scripts/run-jest-with-pattern.cjs database",
    "test:sql": "jest --testPathPatterns=sql-validation --runInBand --forceExit",
    "test:allure": "jest --coverage && allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:clean": "rm -rf allure-results allure-report",
    "lint": "eslint src",
    "lint:security": "eslint src",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npm run lint:security && npm run security:audit",
    "typecheck": "tsc --noEmit",
    "api:schema": "DATABASE_URL=${DATABASE_URL:-postgresql://dummy:dummy@localhost:5432/dummy} npx tsx scripts/generate-api-schema.ts",
    "api:check": "npm run api:schema && git diff --exit-code api-schema.json || (echo 'API schema changed! Review changes above.' && exit 1)",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/utils/seedDatabase.ts",
    "test:perf": "npm run test:perf:db && npm run test:perf:api",
    "test:perf:db": "node scripts/run-jest-with-pattern.cjs performance/benchmarks/database.benchmark --testMatch='**/__tests__/**/*.benchmark.ts'",
    "test:perf:api": "node scripts/run-jest-with-pattern.cjs performance/benchmarks/api.benchmark --testMatch='**/__tests__/**/*.benchmark.ts'",
    "test:perf:k6": "k6 run src/__tests__/performance/k6/load-test.js",
    "test:perf:k6:full": "k6 run src/__tests__/performance/k6/load-test-full.js",
    "test:perf:k6:browser": "k6 run src/__tests__/performance/k6/browser-test.js",
    "test:perf:k6:auth": "k6 run src/__tests__/performance/k6/tests/api/auth.test.js",
    "test:perf:k6:users": "k6 run src/__tests__/performance/k6/tests/api/users.test.js",
    "test:perf:k6:loyalty": "k6 run src/__tests__/performance/k6/tests/api/loyalty.test.js",
    "test:perf:k6:coupons": "k6 run src/__tests__/performance/k6/tests/api/coupons.test.js",
    "test:perf:k6:surveys": "k6 run src/__tests__/performance/k6/tests/api/surveys.test.js",
    "test:perf:k6:all": "npm run test:perf:k6:full",
    "test:perf:check": "bash scripts/check-perf-deps.sh"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@trpc/server": "^11.8.0",
    "@types/connect-redis": "^0.0.23",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.3",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.17.3",
    "helmet": "^8.1.0",
    "imapflow": "^1.2.4",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-line-auth": "^0.2.9",
    "pg": "^8.11.3",
    "redis": "^5.10.0",
    "sharp": "^0.34.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@faker-js/faker": "^10.2.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "allure-commandline": "^2.36.0",
    "allure-jest": "^3.4.2",
    "eslint": "^9.39.2",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.51.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "overrides": {
    "glob": "^11.0.3",
    "js-yaml": "^4.1.1"
  }
}
